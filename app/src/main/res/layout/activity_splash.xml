<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorOnSecondary"
    tools:context=".ui.activites.SplashActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieView_splashScreen"
        android:layout_width="150sp"
        android:layout_height="150sp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        android:layout_gravity="center"
        app:lottie_colorFilter="@color/white"
        app:lottie_rawRes="@raw/lf30_editor_xsfdcmh3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_splashScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="basys.ai"
            android:fontFamily="@font/robotoregular"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:letterSpacing="0.15"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/lottieView_splashScreen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>